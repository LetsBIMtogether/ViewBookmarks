<!-- AGdialogWindow.xaml -->
    
<Window x:Class="AG_View_Bookmarks.agDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="agDialog" Width="395"
        Topmost="True" ResizeMode="NoResize" WindowStyle="None"
        Background="#FF444444" SizeToContent="Height" WindowStartupLocation="CenterScreen">

    <Border Background="Transparent" MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <StackPanel Margin="10" Background="#FFAFAFAF">
            <!-- Display the message -->
            <TextBlock x:Name="MessageTextBlock" Text="Message" TextWrapping="Wrap"
                       Foreground="#FF444444" FontFamily="Century Gothic" FontSize="14"
                       TextAlignment="Center" Margin="10" />

            <StackPanel Margin="3" HorizontalAlignment="Center">
                <!-- OK Button -->
                <Button Content="OK" Width="80" Height="30" Click="OKButton_Click"
                        Background="#FF777777" Foreground="#FFAFAFAF"
                        FontWeight="Bold" BorderBrush="#FF444444" Margin="0,0,0,10" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
